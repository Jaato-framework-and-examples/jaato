{
  "_comment": "File search configuration. Controls exclusions and limits for filesystem queries.",

  "version": "1.0",

  "exclude_patterns": [
    "*.log",
    "*.tmp",
    "*.pyc",
    "*.class"
  ],
  "exclude_mode": "extend",

  "include_patterns": [],

  "max_results": 500,
  "max_file_size_kb": 1024,
  "timeout_seconds": 30,
  "context_lines": 2
}
